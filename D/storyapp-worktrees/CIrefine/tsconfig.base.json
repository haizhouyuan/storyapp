{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@storyapp/shared/*": ["shared/src/*"],
      "@shared/*": ["shared/src/*"]
    },
    "declaration": true,
    "outDir": "dist"
  },
  "exclude": [
    "node_modules",
    "**/node_modules",
    "dist",
    "**/dist"
  ]
}