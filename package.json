{
  "name": "children-story-app",
  "version": "1.0.0",
  "description": "儿童睡前互动故事应用",
  "private": true,
  "workspaces": [
    "backend",
    "frontend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "npm run -w backend dev",
    "dev:frontend": "npm run -w frontend start",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend",
    "build:shared": "npm run -w @storyapp/shared build",
    "build:backend": "npm run -w backend build",
    "build:frontend": "npm run -w frontend build",
    "lint": "npm run lint:frontend",
    "lint:frontend": "npm run -w frontend lint:check",
    "lint:frontend:fix": "npm run -w frontend lint",
    "type-check": "npm run type-check:frontend && npm run type-check:backend && npm run type-check:shared",
    "type-check:frontend": "npm run -w frontend type-check",
    "type-check:backend": "npm run -w backend type-check",
    "type-check:shared": "npm run -w @storyapp/shared build",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "npm run test:backend && npm run test:frontend",
    "test:backend": "npm run -w backend test",
    "test:frontend": "CI=true npm run -w frontend test -- --watch=false --passWithNoTests",
    "test:e2e": "npx playwright test",
    "verify": "npm run lint && npm run type-check && npm run test:unit",
    "test:mcp": "cd playwright-mcp && npm test",
    "install:all": "npm install && cd backend && npm install && cd ../frontend && npm install && cd ../playwright-mcp && npm install",
    "mcp:serve": "npx @playwright/mcp@latest --port 8931 --headless --isolated --timeout-navigation 60000 --timeout-action 8000 --image-responses omit --host 127.0.0.1",
    "local:fe": "bash scripts/dev/up-frontend.sh",
    "local:be": "bash scripts/dev/up-backend.sh",
    "local:up": "bash scripts/dev/local-up.sh",
    "local:status": "bash scripts/dev/status.sh"
  },
  "keywords": [
    "儿童故事",
    "互动故事",
    "睡前故事",
    "AI故事生成"
  ],
  "author": "Story App Developer",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "axios": "^1.12.0",
    "concurrently": "^8.2.2",
    "jest-util": "^30.0.5",
    "serve": "^14.2.5"
  },
  "overrides": {
    "axios": "^1.12.0",
    "cross-spawn": "7.0.6"
  }
}
