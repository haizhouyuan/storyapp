# 预发布环境配置
NODE_ENV=staging
APP_PORT=5002
WEB_PORT=8080

# MongoDB配置
MONGO_USER=staging_user
MONGO_PASS=staging_pass123
MONGO_DB=storyapp_staging

# DeepSeek API配置（需要真实API Key）
DEEPSEEK_API_KEY=your_staging_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com

# 其他配置
FRONTEND_URL=http://localhost:8080

# 日志配置
LOG_LEVEL=info
ENABLE_DETAILED_LOGGING=true
ENABLE_DB_LOGGING=true
LOG_RETENTION_DAYS=30

# 安全配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# 监控配置
ENABLE_METRICS=true