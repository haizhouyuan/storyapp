{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": [
        "@playwright/mcp@latest",
        "--port",
        "8931",
        "--host",
        "127.0.0.1",
        "--headless",
        "--isolated",
        "--timeout-navigation",
        "60000",
        "--timeout-action",
        "8000",
        "--image-responses",
        "omit"
      ],
      "env": {},
      "description": "Playwright MCP server for browser automation and testing"
    },
    "shadcn": {
      "command": "npx",
      "args": [
        "shadcn@latest",
        "mcp"
      ]
    }
  }
}
