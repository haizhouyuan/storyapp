{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://storyapp.local/schemas/detectiveOutline.schema.json",
  "title": "DetectiveOutline",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "centralTrick": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "summary": { "type": "string" },
        "mechanism": { "type": "string" },
        "fairnessNotes": { "type": "array", "items": { "type": "string" } }
      }
    },
    "caseSetup": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "victim": { "type": "string" },
        "crimeScene": { "type": "string" },
        "initialMystery": { "type": "string" }
      }
    },
    "characters": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "role"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": "string" },
          "motive": { "type": "string" },
          "secrets": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    },
    "acts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["act", "focus", "beats"],
        "properties": {
          "act": { "type": "integer" },
          "focus": { "type": "string" },
          "beats": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["beat", "summary"],
              "properties": {
                "beat": { "type": "integer" },
                "summary": { "type": "string" },
                "cluesRevealed": { "type": "array", "items": { "type": "string" } },
                "redHerring": { "type": "string" }
              },
              "additionalProperties": true
            }
          }
        },
        "additionalProperties": true
      }
    },
    "clueMatrix": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["clue"],
        "properties": {
          "clue": { "type": "string" },
          "surfaceMeaning": { "type": "string" },
          "realMeaning": { "type": "string" },
          "appearsAtAct": { "type": "integer" },
          "mustForeshadow": { "type": "boolean" },
          "explicitForeshadowChapters": {
            "type": "array",
            "items": { "type": "string" }
          },
          "isRedHerring": { "type": "boolean" }
        },
        "additionalProperties": true
      }
    },
    "timeline": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["time", "event"],
        "properties": {
          "time": { "type": "string" },
          "event": { "type": "string" },
          "participants": { "type": "array", "items": { "type": "string" } }
        },
        "additionalProperties": true
      }
    },
    "actsCount": { "type": "integer", "minimum": 3 },
    "falseSolution": { "type": "string" },
    "twists": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          {
            "type": "object",
            "properties": {
              "summary": { "type": "string" },
              "chapter": { "type": "string" },
              "type": { "type": "string" },
              "impact": { "type": "string" }
            },
            "additionalProperties": true
          }
        ]
      }
    },
    "secondaryMysteries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["question"],
        "properties": {
          "id": { "type": "string" },
          "question": { "type": "string" },
          "foreshadowing": {
            "type": "array",
            "items": { "type": "string" }
          },
          "resolution": { "type": "string" },
          "payoffChapter": { "type": "string" },
          "stakes": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "chapterAnchors": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "chapter": { "type": "string" },
          "dayCode": { "type": "string" },
          "time": { "type": "string" },
          "label": { "type": "string" },
          "summary": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "chapterBlueprints": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "chapter": { "type": "string" },
          "wordTarget": { "type": "integer" },
          "conflictGoal": { "type": "string" },
          "backgroundNeeded": {
            "type": "array",
            "items": { "type": "string" }
          },
          "emotionalBeat": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "emotionalBeats": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "chapter": { "type": "string" },
          "focus": { "type": "string" },
          "delivery": { "type": "string" },
          "keywords": {
            "type": "array",
            "items": { "type": "string" }
          }
        },
        "additionalProperties": true
      }
    },
    "misdirectionMoments": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "chapter": { "type": "string" },
          "setup": { "type": "string" },
          "surfaceInterpretation": { "type": "string" },
          "revealHint": { "type": "string" },
          "suspect": { "type": "string" },
          "intensity": { "type": "string" }
        },
        "additionalProperties": true
      }
    },
    "themes": { "type": "array", "items": { "type": "string" } },
    "logicChecklist": { "type": "array", "items": { "type": "string" } }
  }
}
