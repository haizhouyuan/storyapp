# 生产环境配置
NODE_ENV=production
APP_PORT=5000
WEB_PORT=80

# MongoDB配置（生产环境需要强密码）
MONGO_USER=prod_admin
MONGO_PASS=your_strong_mongodb_password_here
MONGO_DB=storyapp

# DeepSeek API配置（必须设置真实API Key）
DEEPSEEK_API_KEY=your_production_deepseek_api_key_here
DEEPSEEK_API_URL=https://api.deepseek.com

# 域名配置
FRONTEND_URL=https://storyapp.dandanbaba.xyz

# 日志配置
LOG_LEVEL=warn
ENABLE_DETAILED_LOGGING=true
ENABLE_DB_LOGGING=true
LOG_RETENTION_DAYS=90

# 安全配置（生产环境严格）
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 监控配置
ENABLE_METRICS=true
ENABLE_HEALTH_CHECKS=true

# SSL配置
SSL_CERT_PATH=/etc/nginx/certs/fullchain.pem
SSL_KEY_PATH=/etc/nginx/certs/privkey.pem